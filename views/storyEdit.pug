extends layout.pug
include utils.pug
block content
    +validationErrorSummary(errors)
    form(action=`/stories/${story.id}/edit` method='POST')
        input(name='_csrf' type='hidden' value=csrfToken)
        label Title
        input(type='text' name='title' required value=story.title)
        label Content
        input(type='text' name='content' required value=story.content)
        label Image
        input(type='text' name='imgUrl' required value=story.imgUrl)
        button(type="submit") Submit
        a(href=`/stories/${story.id}`) Cancel
