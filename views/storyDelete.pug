extends layout.pug

block content
  h3= story.title
  p= story.content
  div(class='py-4')
    p Proceed with deleting this story?
  div
    form(action=`/stories/${story.id}/delete` method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      button(type='submit') Delete Story
      a(href=`/stories/${story.id}` role='button') Cancel
