extends layout.pug

block content
    form(action='/stories/new' method='POST')
    input(name='_csrf' type='hidden' value=csrfToken)
    label Title
    input(type='text' name='title' required value=stories.title)
    label Content
    input(type='text' name='content' required value=stories.content)
    label Image
    input(type='text' name='imgUrl' required value=stories.imgUrl)
