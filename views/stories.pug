extends layout.pug

append head
    link(rel="stylesheet" href="/stylesheets/stories.css")
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500&display=swap" rel="stylesheet")

block content
    each story in stories
        div(id=`story-container-${story.id}`)
            h2(id=`story-title-${story.id}`)
                a(href=`/stories/${story.id}`)=story.title
            h2(id=`story-author-${story.id}`)=story.author.fullName
            h3=story.createdAt.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })
            p(id=`story-content-${story.id}`)=story.content
